<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.SolutionPage">

	<StackLayout>
		<Label x:Name="HeaderLabel" VerticalOptions="Start"/>

		<!-- Управление -->
		<StackLayout HorizontalOptions="Center" Orientation="Horizontal">
			<Button x:Name="Start" />
			<Button x:Name="Stop" />

			<Button x:Name="Method" />
			<Button x:Name="NightMode" />
			<Button x:Name="ScalesCount" />
		</StackLayout>

		<!-- Шкалы -->
		<Label x:Name="Measure" HorizontalOptions="Center" />

		<Label x:Name="Space01" />

		<ProgressBar x:Name="Scale1" HorizontalOptions="Fill" />
		<ProgressBar x:Name="Scale2" HorizontalOptions="Fill" />
		<ProgressBar x:Name="Scale3" HorizontalOptions="Fill" />

		<Label x:Name="Space02" />

		<!-- Результаты -->
		<ScrollView>
			<StackLayout>
				<Label x:Name="Results" HorizontalOptions="Center" />
			</StackLayout>
		</ScrollView>

		<StackLayout HorizontalOptions="Center" Orientation="Horizontal" VerticalOptions="Center">
			<Button x:Name="ShareResults" HorizontalOptions="Center" />
			<Button x:Name="Certificate" HorizontalOptions="Center" />
		</StackLayout>

	</StackLayout >
</ContentPage>
